{% extends 'base.html.twig' %}

{% block title %}Edit book{% endblock %}

{% block body %}
    <h3>Edit book</h3>
    <a href="{{ path('main') }}">Home</a><br><br>
    {{ form_start(form) }}
    <p>Title{{ form_row(form.title) }}</p>
    <p>Author{{ form_row(form.author) }}</p>
    <p>Date{{ form_row(form.date) }}</p>
    <button class="btn btn-default" type="submit">Edit book</button>
    {{ form_end(form) }}
{% endblock %}
